{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",
    "module": "ESNext", // Output modern JavaScript with ESM syntax
    "moduleResolution": "NodeNext", // Or "Node16" depending on your Node.js version support
    "outDir": "dist/esm", // Output ESM files to this directory
    "declaration": true, // Generate declaration files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true // Keep this for strict ESM checking
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}